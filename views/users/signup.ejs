<% layout("layouts/boilerplate") -%>
<body>
  <div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp On Sight</h1>
    <div class="col-6 offset-3">
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label"><b>Username</b></label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter username</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label"><b>Email</b></label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            placeholder="abc@gmail.com"
            required
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label"><b>Password</b></label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
          <div class="valid-feedback">strong password!</div>
          <div class="invalid-feedback">weak password!</div>
        </div>

        <button type="submit" class="btn btn-success">SignUp</button>
      </form>

      <div class="mt-3">
        <p>Already a user, &nbsp;<a href="/login">Login</a></p>
      </div>
    </div>
  </div>
</body>
