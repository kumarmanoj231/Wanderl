<% layout("layouts/boilerplate") -%>
<body>
  <%- include("../includes/filter.ejs") %>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 pd-auto mt-3">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%=listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%=listing.image.url %>"
          class="card-img-top"
          alt="<%=listing.image.filename %>"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title%></b><br />
            <span class="price"
              >&#8377;<%= listing.price.toLocaleString("en-IN") %></span
            >&nbsp;/night

            <span class="tax-info">+ 18% GST</span> &nbsp;&nbsp;&nbsp;
            <span class="card-text"><%= listing.location%> </span>
          </p>
        </div>
      </div>
    </a>

    <%} %>
  </div>
</body>
