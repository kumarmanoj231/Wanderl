<% layout("layouts/boilerplate") -%>

<body>
  <script>
    const map_token = "<%=process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
  </script>

  <div class="row offset-md-1">
    <div class="mb-2">
      <h3 class="mt-2"><%= listing.title %></h3>
    </div>

    <div class="col-md-12 col-xl-10 mb-2">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="<%=listing.image.filename%>"
        style="height: 60dvh"
      />
    </div>
    <div class="card listing-card mb-3">
      <div class="card-body">
        <p class="card-text">
          Owned By :
          <b><%= listing.owner.username %> </b>
        </p>
        <p class="card-text"><q><%= listing.description %></q></p>
        <p class="card-text">
          &#8377;&nbsp;<%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text">
          <i class="fa-solid fa-location-dot">&nbsp;</i><%= listing.location %>
        </p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>

    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="mb-3">
      <a
        href="/listings/<%= listing._id%>/edit"
        class="btn btn-dark mb-2"
        role="button"
        ><i class="fa-solid fa-pen-nib"></i>&nbsp;&nbsp; Edit</a
      >

      <form action="/listings/<%=listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger">
          <i class="fa-solid fa-trash-can"></i>&nbsp;&nbsp;Delete
        </button>
      </form>
    </div>

    <% } %>
    <hr />
    <div class="col-11 mb-3">
      <h3>Where you'll be</h3>

      <div id="map"></div>
    </div>

    <hr />

    <% if(!listing.reviews.length == 0){ %>
    <h4>All reviews</h4>
    <% } %> <% for(let review of listing.reviews){ %>
    <div class="card col-md-5 mb-3 review-card">
      <div class="card-body">
        <h5 class="card-title mt-2">
          <small>
            <i class="fa-regular fa-user"></i>
            <%=review.author.username %></small
          >
        </h5>
        <p
          class="starability-result card-text"
          data-rating="<%= review.rating%>"
        ></p>
        <p class="card-text review-comment"><%= review.comment%></p>

        <form
          action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="post"
        >
          <% if(currUser && currUser._id.equals(review.author._id)) { %>
          <button class="btn btn-dark mb-2">Delete</button>
          <% } %>
        </form>
      </div>
    </div>

    <% } %> <% if(currUser){ %>
    <hr />
    <h3>Leave a review</h3>
    <div class="col-8 mb-3">
      <form
        action="/listings/<%=listing._id %>/reviews"
        class="mb-3 mt-3 needs-validation"
        method="post"
        novalidate
      >
        <!-- <div class="mb-3">
                <label for="rating" class="form-label"><b>Rating</b></label>
                <input type="range" name="review[rating]" min="1" max="5" id="rating" class="form-range" value="3">
            </div> -->
        <div class="col-8 mb-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>
        <br />
        <button type="submit" class="btn btn-outline-dark">Submit</button>
      </form>
    </div>

    <% } %>
  </div>

  <script src="/js/map.js"></script>
</body>